@charset "utf-8"
/*CSS reset Start*/
body,
div,
dl,
dt,
dd,
ul,
ol,
li,
h1,
h2,
h3,
h4,
h5,
h6,
pre,
code,
form,
fieldset,
legend,
input,
textarea,
p,
blockquote,
th,
td,
hr,
button,
lable
  margin: 0
  padding: 0

h1,
h2,
h3,
h4,
h5,
h6
  font-size: 100%
  font-weight: 500

a,
button,
input
  -webkit-tap-highlight-color: rgba(255,0,0,0)

select,
textarea
  font-size: 100%

table
  border-collapse: collapse
  border-spacing: 0

fieldset,
img
  border: 0

img
  vertical-align: top

abbr,
acronym
  border: 0
  font-variant: normal

del
  text-decoration: line-through

address,
caption,
cite,
code,
dfn,
em,
b,
i,
th,
var
  font-weight: normal
  font-style: normal

ol,
ul
  list-style: none

caption,
th
  text-align: left

ins
  text-decoration: none

input,
button,
select,
textarea
  outline: none
  font-family: "Microsoft YaHei"

textarea
  resize: none

a
  text-decoration: none
  cursor: pointer
  color: #444

a:focus
  outline: none
  -moz-outline-style: none

a:hover,
a:link
  color: #444
  text-decoration: none

a:active,
a:visited
  color: #444
  text-decoration: none

input::-webkit-input-placeholder
  color: #888
  font-size: 0.75rem

input::-moz-placeholder
  color: #888
  font-size: 0.75rem

/* firefox 19+ */
input:-ms-input-placeholder
  color: #888
  font-size: 0.75rem

/* ie */
input:-moz-placeholder
  color: #888
  font-size: 0.75rem

textarea::-webkit-input-placeholder
  color: #888
  font-size: 0.75rem

textarea::-moz-placeholder
  color: #888
  font-size: 0.75rem

/* firefox 19+ */
textarea:-ms-input-placeholder
  color: #888
  font-size: 0.75rem

/* ie */
textarea:-moz-placeholder
  color: #888
  font-size: 0.75rem

/*CSS reset End*/
body
  min-width: 320px
  margin: 0 auto
  background: #f0f0f0
  color: #444
  font: 0.75rem "Microsoft YaHei", "微软雅黑", tahoma, arial, sans-serif

.font_num
  font-family: Helvetica, Georgia, "Times New Roman", Times, serif

.font_orange
  color: #f4981d

.font_gray
  color: #888

.bg_white
  background-color: #fff

/*清除浮动*/
.clearfix:after,
.clearfix:before
  display: table
  content: ""

.clearfix:after
  clear: both
  overflow: hidden

.line,
.line2
  position: relative
  width: 100%

.line:before,
.line2:before
  content: ""
  height: 1px
  width: 100%
  position: absolute
  z-index: 9
  background-color: #ddd
  transform: scaleY(0.5)
  -ms-transform: scaleY(0.5)
  -webkit-transform: scaleY(0.5)
  -o-transform: scaleY(0.5)
  -moz-transform: scaleY(0.5)

.line:before
  left: 0
  bottom: 0px

.line2:before
  left: 0
  top: 0px

.vertical_line

.vertical_line:before
  content: ""
  width: 1px
  height: 100%
  position: absolute
  right: 0
  bottom: 0px
  z-index: 9
  background-color: #ddd
  transform: scaleX(0.5)
  -ms-transform: scaleX(0.5)
  -webkit-transform: scaleX(0.5)
  -o-transform: scaleX(0.5)
  -moz-transform: scaleX(0.5)

/*顶部导航*/
.top_bar
  height: 3.25rem
  width: 100%
  background-color: #fff
  line-height: 3.25rem
  text-align: center
  position: relative

.bar_bg1
  background-color: #f4981d

.logo
  background: url(../images/logo.png) left top no-repeat
  background-size: 7.5rem 2rem
  width: 7.5rem
  height: 2rem
  margin-left: 0.75rem
  margin-top: 0.625rem
  position: relative
  float: left

a.user_icon,
a.back_icon,
a.back_icon2,
a.mess_icon,
a.tip_icon
  width: 3.25rem
  height: 3.25rem
  float: right
  background: url(../images/icon_user.png) center center no-repeat transparent
  background-size: 1.5rem 1.5rem

a.back_icon
  background: url(../images/icon_back.png) center center no-repeat transparent
  position: absolute
  left: -0.35rem
  top: 0
  z-index: 1
  background-size: 1.5rem 1.5rem

a.back_icon2
  background: url(../images/icon_back2.png) center center no-repeat transparent
  position: absolute
  left: -0.35rem
  top: 0
  z-index: 1
  background-size: 1.5rem 1.5rem

a.mess_icon
  background: url(../images/icon_mess.png) center center no-repeat transparent
  position: absolute
  right: 0
  top: 0
  z-index: 1
  background-size: 1.5rem 1.5rem

a.tip_icon
  background: url(../images/icon_tip.png) center center no-repeat transparent
  position: absolute
  right: 0
  top: 0
  z-index: 1
  background-size: 1.5rem 1.5rem

a.user_head
  width: 3.25rem
  height: 3.25rem
  display: block
  float: right
  position: relative

.mess_new
  position: absolute
  left: 2.5rem
  top: 1rem
  z-index: 2
  width: 0.5rem
  height: 0.5rem
  background-color: #f4981d
  border-radius: 50%
  border: 2px solid #fff

a.user_head .mess_new
  left: 2.1rem
  top: 0.4rem

a.mess_icon .mess_new
  left: 1.9rem
  top: 0.6rem
  background-color: #f2c52c
  border: 2px solid #f4981d

a.user_head img
  width: 2.25rem
  height: 2.25rem
  border-radius: 50%
  overflow: hidden
  margin-top: 0.5rem
  margin-right: 0.25rem

a.top_link
  width: 3.25rem
  height: 3.25rem
  position: absolute
  right: 0
  top: 0
  z-index: 1
  color: #f4981d
  font-size: 0.75rem

.top_bar span
  font-size: 1rem

.bar_bg1 span
  color: #fff

.wrap
  width: 100%
  position: relative

/*banner*/
.focus
  width: 100%
  height: 7.5rem
  margin: 0 auto
  position: relative
  overflow: hidden
  background-color: #ddd

.focus .hd
  width: 100%
  height: 0.5rem
  position: absolute
  z-index: 1
  bottom: 0.5rem
  text-align: center

.focus .hd ul

.focus .hd ul li
  display: inline-block
  width: 0.5rem
  height: 0.5rem
  -webkit-border-radius: 0.25rem
  -moz-border-radius: 0.25rem
  border-radius: 0.25rem
  background: #fff
  margin: 0 0.25rem
  line-height: 10rem
  vertical-align: top
  overflow: hidden

.focus .hd ul .on
  background: #f4981d

.focus .bd
  position: relative
  z-index: 0

.focus .bd li img
  width: 100%
  height: 7.5rem
/*background: url(../images/more/loading.gif) center center no-repeat;*/

.focus .bd li a
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
/* 取消链接高亮 */

.pro_menu
  width: 100%
  height: 5.75rem
  background-color: #fff
  margin-top: 0.75rem
  text-align: center

.pro_menu ul
  margin-left: 0.375rem

.pro_menu li
  width: 6rem
  float: left

.pro_menu li a
  display: block
  margin: 0 auto
  width: 4rem
  height: 5.75rem
  position: relative

.pro_menu li a:before
  content: ""
  width: 3rem
  height: 3rem
  position: absolute
  left: 50%
  margin-left: -1.5rem
  top: 0.75rem
  background: url(../images/icon_xinshou.png) left top no-repeat #b3d465
  background-size: cover
  border-radius: 50%

.pro_menu li:nth-of-type(2) a:before
  background: url(../images/icon_huoqi.png) left top no-repeat #52c0e0
  background-size: cover

.pro_menu li:nth-of-type(3) a:before
  background: url(../images/icon_dingqi.png) left top no-repeat #feca64
  background-size: cover

.pro_menu li a span
  position: absolute
  top: 4rem
  display: block
  width: 100%
  text-align: center

.product_cont
  width: 100%
  background-color: #fff
  margin-top: 0.75rem
  overflow: hidden

.recommend_title
  height: 2.25rem
  line-height: 2.25rem
  text-align: center
  font-size: 0.9rem

font.recommend_icon
  display: inline-block
  text-align: center
  margin-left: 0.5rem
  padding: 0 0.25rem
  height: 1rem
  background-color: #90b622
  color: #fff
  border-radius: 0.25rem
  font-size: 0.6rem
  line-height: 1rem
  position: relative
  top: -0.15rem

font.type_icon
  background-color: #f2c52c

.product_list
  width: 100%
  margin: 0 auto
  overflow: visible

.product_list li a
  display: block
  width: 17.25rem
  min-height: 5rem
  position: relative
  margin: 0 auto
  overflow: hidden
  padding-bottom: 0.5rem

.product_list li a > span
  font-size: 0.8rem
  margin-top: 0.75rem
  display: block

.product_list li.specail
  background: -moz-linear-gradient(top,  #ffdd6a 0%, #ffffff 100%)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffdd6a), color-stop(100%,#ffffff))
  background: -webkit-linear-gradient(top,  #ffdd6a 0%,#ffffff 100%)
  background: -o-linear-gradient(top,  #ffdd6a 0%,#ffffff 100%)
  background: -ms-linear-gradient(top,  #ffdd6a 0%,#ffffff 100%)
  background: linear-gradient(to bottom,  #ffdd6a 0%,#ffffff 100%)
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffdd6a', endColorstr='#ffffff',GradientType=0 )

.pro_data dd
  float: left
  margin-top: 0.65rem
  position: relative

.pro_data dd:nth-of-type(1)
  width: 30%

.pro_data dd span
  color: #888
  display: block

.pro_data dd font
  color: #f4981d
  font-size: 1.5rem

.pro_data dd font i
  font-size: 0.75rem

.pro_data dd p
  margin-left: 1.5rem

.pro_data dd p span
  margin-bottom: 0.5rem

.pro_data dd p span b
  margin-left: 0.5rem

.pro_data dd.vertical_line:before
  height: 2.5rem
  top: 0rem

